
            <header class="header row g-0">
                <div class="col-3">
                    {{> logo}}
                </div>

                <nav class="header_nav col-9 header_nav_right">
                    <div class="header_nav_right">
                        {{>nav list=header}}
                    </div>
                </nav>
            </header>
            
            <main class="main">
                {{#with main}}
                <img src="{{image}}" alt="Main image" class="main_image">
                <div class="main_content">
                    <h1 class="main_heading">
                        {{heading}}
                    </h1>
                    <p class="main_descriotion">
                        {{descriotion}}
                    </p>
                    <a href="{{href}}" class="main_button">{{button}}</a>
                </div>
                {{/with}}
            </main>


            <div class="featured">
                {{#each featured}}
                    {{> cardFeatured data=this}}
                {{/each}}
            </div>

            <div class="actions">
                {{#each actions}}
                    {{> cardActions data=this}}
                {{/each}}
            </div>

            <footer class="row footer">
                <div class="col-3 ">
                    {{> logo}}
                    <span class="footer_copyright">Copyright 2023-2024</span>
                </div>

                {{#each footer}}
                    <div class="col-3">
                        <span class="footer_title">{{title}}</span>
                        {{>nav list=links isVertical=true}}
                    </div>
                {{/each}}
            </footer> 
